{
  "name": "@hiogawa/isort-ts",
  "version": "1.1.0",
  "type": "commonjs",
  "main": "./dist/index.js",
  "bin": "./bin/cli.js",
  "files": [
    "dist"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hi-ogawa/isort-ts"
  },
  "scripts": {
    "dev": "run-p -c dev:*",
    "dev:tsup": "tsup --watch",
    "dev:tsc": "pnpm tsc --watch --preserveWatchOutput",
    "dev-isort": "node -r esbuild-register ./src/cli.ts",
    "dev-isort-prettier": "prettier --write . --plugin=./dist/index.js",
    "dev-isort-fix": "pnpm dev-isort --git --fix",
    "dev-isort-check": "pnpm dev-isort --git",
    "build": "tsup",
    "test": "vitest",
    "tsc": "tsc -b",
    "lint": "run-s lint:*",
    "lint-check": "run-s lint-check:*",
    "lint:isort": "pnpm lint-check:isort --fix",
    "lint-check:isort": "isort-ts --git --cache",
    "lint:prettier": "prettier --write --cache .",
    "lint-check:prettier": "prettier --check --cache .",
    "release": "pnpm publish --no-git-checks --access public"
  },
  "devDependencies": {
    "--isort-ts": "npm:@hiogawa/isort-ts@1.1.0",
    "@changesets/cli": "^2.26.1",
    "@hiogawa/tiny-cli": "0.0.2",
    "@hiogawa/utils": "1.6.0",
    "@tsconfig/strictest": "^1.0.2",
    "@types/node": "^18.14.1",
    "@types/prettier": "^2.7.2",
    "esbuild": "^0.17.10",
    "esbuild-register": "^3.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "tsup": "^6.6.3",
    "typescript": "^4.9.4",
    "vitest": "^0.28.5"
  },
  "peerDependencies": {
    "prettier": "*",
    "typescript": "*"
  },
  "peerDependenciesMeta": {
    "prettier": {
      "optional": true
    }
  },
  "volta": {
    "node": "18.14.0"
  }
}
